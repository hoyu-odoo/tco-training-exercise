<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_quantity_view_form" model="ir.ui.view">
        <field name="name">sale.order.quantity.form</field>
        <field name="model">sale.order.quantity</field>
        <field name="arch" type="xml">
            <form>
                <strong>You can set the quantity for all order lines</strong>
                <field name="quantity" />
                <footer>
                    <button string="Confirm" name="action_set_quantity" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
